              "raw": "{\n  \"name\": \"My First Travel Project\",\n  \"description\": \"Exploring art museums around the world\",\n  \"start_date\": \"2024-06-01\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/projects/",
              "host": ["{{base_url}}"],
